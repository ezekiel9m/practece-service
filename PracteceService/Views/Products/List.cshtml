@model IEnumerable<PracteceService.Models.Product.ProductModel>
@{
    ViewData["Title"] = "List Product";
}

<div class="container">
    
    <p></p>
    <table class="display table table-hover" id="minhaTabela">
        <h2 align="center"><b style="color: black">Tabela de Produtos</b></h2>
        <thead class="thead-dark">
            <tr>
                <th scope="col" width="2%">Id</th>
                <th scope="col" width="15%">Nome</th>
                <th scope="col" width="10%">Código</th>
                <th scope="col" width="15%">Preço</th>
                <th scope="col" width="29%">Data de Criação</th>
                <th scope="row" width="29%"> Data de Atualização</th>
                <th scope="row" width="29%"> </th>
                <th scope="row" width="29%"> </th>
                <th scope="row" width="29%"><a class="btn btn-outline-secondary btn-sm pull-right" asp-controller="Products" asp-action="CreateProduct" style="color:white">Cadastrar</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr style="color:black">
                <td width="2%">@item.ProductId</td>
                <td width="8%">@item.Name</td>
                <td width="10%">@item.Code</td>
                <td width="12%">R$ @item.Price.ToString("n2")</td>
                <td width="30%" align="center">@item.CreateDate.ToString("yyyy-MM-dd\\THH:mm:ss")</td>
                @if (item.UpdateDate.HasValue)
                {
                    <td width="30%" align="center">@item.UpdateDate.Value.ToString("yyyy-MM-dd\\THH:mm:ss")</td>
                }
                else
                {
                <td width="30%" align="center"> ----- -----</td>
                }

                <td> <button type="button" onclick="detalheis($(this))" data-id="@item.ProductId" class="btn btn-outline-info">Detalhes</button></td>
                <td><a class="btn btn-outline-primary" asp-controller="Aluno" asp-action="UpdateProduct" asp-route-id="@item.ProductId">Alterar</a></td>
                <td> <button type="button" class="btn btn-outline-danger" data-id="@item.ProductId" data-toggle="modal" data-target="#modalDelete">Excluir</button></td>
            </tr>
            }
        </tbody>
    </table>
</div>